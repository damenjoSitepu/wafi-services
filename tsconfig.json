{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/utils/*": ["utils/*"],
      "@/resources/*": ["resources/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/settings/*": ["settings/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}